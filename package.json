{
  "name": "hexagon-server",
  "version": "0.1.0",
  "main": "build/index.js",
  "author": "Jakub Sapalski",
  "license": "ISC",
  "private": true,
  "scripts": {
    "clean": "rimraf ./build",
    "prebuild": "npm run clean",
    "build": "tsc",
    "start": "node --inspect=localhost:5858 --nolazy -r ts-node/register src/index.ts",
    "dev": "nodemon --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "style": "prettier --list-different src/**/*.ts test/**/*.ts",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.2",
    "@types/nanoid": "^1.2.1",
    "@types/request": "^2.48.1",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.2",
    "eslint-config-prettier": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "mysql": "^2.16.0",
    "nanoid": "^2.0.1",
    "randanimal": "^1.0.4",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "typeorm": "^0.2.15",
    "ws": "^6.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run style",
      "pre-push": "npm run lint"
    }
  }
}
